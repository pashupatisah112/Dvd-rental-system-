@model Coursework.member

@{
    ViewBag.Title = "Signup";
}

<div class="content">
    <h2 class="m_2">Add a new Cast</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                <div class="col-md-6">
                    <label>First Name</label>
                    @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control",@required="required",placeholder="Enter first name" } })
                    @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Last Name</label>
                    @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label>Email Address</label>
                    @Html.EditorFor(model => model.email_address, new { htmlAttributes = new { @class = "form-control", @required = "required",@type="email" } })
                    @Html.ValidationMessageFor(model => model.email_address, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Address</label>
                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label>Phone</label>
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Date of birth</label>
                    @Html.EditorFor(model => model.dob, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dob, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Role</label>
                    @Html.DropDownList("role_id", new SelectList(ViewBag.role_id, "Value", "Text"), "Select role", new { @class = "form-control",id="role", @required = "required" })

                    @Html.ValidationMessageFor(model => model.role_Id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Member category</label>
                    @Html.DropDownList("mem_Cat_Id", new SelectList(ViewBag.mem_Cat_Id, "Value", "Text"), "Select Membership", new { @class = "form-control",id="member" })

                    @Html.ValidationMessageFor(model => model.mem_Cat_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <label>Profile</label>
                    @Html.EditorFor(model => model.profile, new { htmlAttributes = new { @type = "file", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.profile, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Password</label>
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Confirm Password</label>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control",@type="password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
    $("#member").prop("disabled", true);
    $("#role").change(function () {
        var selectedValue = $(this).val();
        if (selectedValue == 5) {
            $("#member").prop("disabled", false);
        }
        else {
            $("#member").prop("disabled", true);
        }
    });
</script>
