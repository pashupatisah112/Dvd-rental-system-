@model IEnumerable<Coursework.cast>

@{
    ViewBag.Title = "Index";
}

<div class="content">
    <div class="box_1">
        <h1 class="m_2">List of Casts</h1>
        <div class="clearfix"> </div>
    </div>
    <p class="hvr-shutter-out-horizontal" style="padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("Add New", "Create") <i class="fa fa-plus"></i></p>

    <table class="table">
        <tr>
            <th>
                <span class="m_2">First Name</span>
            </th>
            <th>
                <span class="m_2">Last Name</span>
            </th>
            <th>
                <span class="m_2">Date of Birth</span>
            </th>

            <th>
                <span class="m_2">Picture</span>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.last_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dob)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.profile)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>

        }

    </table>
    @Html.ActionLink("Go to Home", "ManagerHome", "Home")
</div>
