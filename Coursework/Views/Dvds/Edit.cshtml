@model Coursework.dvd

@{
    ViewBag.Title = "Edit";
}

<div class="content">
    <h2 class="m_2">Edit Dvd details here</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Copy Number</label>
                    @Html.EditorFor(model => model.copy_number, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.copy_number, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Title</label>
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Released Date</label>
                    @Html.EditorFor(model => model.released_date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.released_date, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Select Genres</label>
                    @Html.DropDownList("genres_id", null,"Select genres", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.genres_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Stock</label>
                    @Html.EditorFor(model => model.stock, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.stock, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Date Added</label>
                    @Html.EditorFor(model => model.date_added, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.date_added, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Select Studio</label>
                    @Html.DropDownList("studio_id", null,"Select Studio", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.studio_id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Select Producer</label>
                    @Html.DropDownList("producer_id", null,"Select Producer", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.producer_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <label>Cast</label>
                    @Html.DropDownList("cast_id", null,"Select Cast", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.cast_id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label>Select Cover</label>
                    @Html.EditorFor(model => model.cover, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                    @Html.ValidationMessageFor(model => model.cover, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
