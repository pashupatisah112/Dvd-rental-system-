@model IEnumerable<Coursework.dvd>

@{
    ViewBag.Title = "Index";
}

<div class="content">
    <div class="box_1">
        <h1 class="m_2">List of Dvds</h1>
        <div class="clearfix"> </div>
    </div>
    <p class="hvr-shutter-out-horizontal" style="padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("Add New", "Create") <i class="fa fa-plus"></i></p>
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin:5px;">@Html.ActionLink("See Least Loaned", "LeastLoaned")
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin:5px;">@Html.ActionLink("See Copies on Loan", "LoanCopy")
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin:5px;">@Html.ActionLink("See Older copies", "OlderCopies")</p>
    <table class="table">
        <tr>
            <th>
                <span class="m_2">Copy Number</span>
            </th>
            <th>
                <span class="m_2">Title</span>
            </th>
            <th>
                <span class="m_2">Released Date</span>
            </th>
            <th>
                <span class="m_2">Stock</span>
            </th>
            <th>
                <span class="m_2">Date Added</span>
            </th>
            <th>
                <span class="m_2">Cover</span>
            </th>
            <th>
                <span class="m_2">First Name</span>
            </th>
            <th>
                <span class="m_2">Genres</span>
            </th>
            <th>
                <span class="m_2">Producer</span>
            </th>
            <th>
                <span class="m_2">Studio</span>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.copy_number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.released_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_added)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cover)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cast.first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genres.genres1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.producer.first_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.studio.name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>

        }

    </table>
    @Html.ActionLink("Go to Home", "ManagerHome", "Home")
</div>

