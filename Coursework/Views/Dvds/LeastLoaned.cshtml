
@{
    ViewBag.Title = "Index";
}

<div class="content">
    <div class="box_1">
        <h1 class="m_2">List of Dvds on Loan</h1>
        <div class="search">
            <form>
                <input type="text" value="Search..." onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                <input type="submit" value="">
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
    <p class="hvr-shutter-out-horizontal" style="padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("Add New", "Create") <i class="fa fa-plus"></i></p>
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("See Older Copies", "OlderCopies")
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("See All", "Index") <i class="fa fa-plus"></i></p>
    <table class="table">
        <tr>
            <th>
                <span class="m_2">Copy Number</span>
            </th>
            <th>
                <span class="m_2">Title</span>
            </th>
            <th>
                <span class="m_2">Last Loaned</span>
            </th>
            <th></th>
        </tr>

        @foreach (var ll in ViewBag.least)
        {

            <tr>
                <td>
                    @ll.dvd.copy_number
                </td>
                <td>
                    @ll.dvd.title
                </td>
                <td>
                    @ll.date_out
                </td>
            </tr>

        }

    </table>
    @Html.ActionLink("Go to Home", "ManagerHome", "Home")
</div>

