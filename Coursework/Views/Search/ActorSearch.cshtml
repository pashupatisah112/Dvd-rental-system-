@model Coursework.dvd
@{
    ViewBag.Title = "ActorSearch";
}

<div class="content">
    <div class="box_1">
        <h1 class="m_2">Your Search Results</h1>
        <div class="search">
            @using (Html.BeginForm("ActorFilter", "Search", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.TextBox("last_name", null, new { @class = "form-control" })
                <input type="submit" value="" style="margin-right:-25px;">
            }
        </div>
        <div class="clearfix"> </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            @foreach (var d in ViewBag.result)
            {
                <div class="box_2">
                    <div class="col-md-5 grid_3">
                        <div class="row_1">
                            <div class="col-md-6 grid_4">
                                <a href="single.html">
                                    <div class="grid_2">
                                        <img src="~/Content/images/pic3.jpg" class="img-responsive" alt="" />
                                        <div class="caption1">
                                            <p class="m_3">@d.first_name</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

