
@{
    ViewBag.Title = "Index";
}

<div class="content">
    <div class="box_1">
        <h1 class="m_2">Details of last loan of your searched copy</h1>
        <div class="clearfix"> </div>
    </div>
    <p class="hvr-shutter-out-horizontal" style="padding:5px;color:green;margin-bottom:3px;">@Html.ActionLink("Add New", "Create","Dvds") <i class="fa fa-plus"></i></p>
    <p class="hvr-shutter-out-horizontal" style="float:right;padding:5px;color:green;margin:5px;">@Html.ActionLink("See All", "Index","Dvds")
    <table class="table">
        <tr>
            <th>
                <span class="m_2">Copy Number</span>
            </th>
            <th>
                <span class="m_2">Title</span>
            </th>
            <th>
                <span class="m_2">Borrower</span>
            </th>
            <th>
                <span class="m_2">Date out</span>
            </th>
            <th>
                <span class="m_2">Due</span>
            </th>

            <th></th>
        </tr>

        @foreach (var ll in ViewBag.result)
        {
        <tr>
            <td>
                @ll.dvd.copy_number
            </td>
            <td>
                @ll.dvd.title
            </td>
            <td>
                @ll.member.first_name
            </td>
            <td>
                @ll.date_out
            </td>
            <td>
                @ll.due
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = ll.id }) |
                @Html.ActionLink("Details", "Details", new { id = ll.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = ll.id })
            </td>
        </tr>

        }

    </table>
    @Html.ActionLink("Go to Home", "ManagerHome", "Home")
</div>

