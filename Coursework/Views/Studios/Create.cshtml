@model Coursework.studio

@{
    ViewBag.Title = "Create";
}

<div class="content">
    <h2 class="m_2">Add a new Studio</h2>

    @using (Html.BeginForm("Create", "Studios", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <div class="col-md-6">
                    <span>Studio Name</span>
                    @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-6">
                    <span>Owner</span>
                    @Html.TextBoxFor(model => model.owner, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.owner, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <span>Founder</span>
                    @Html.TextBoxFor(model => model.founder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.founder, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Total Moviews Produced</span>
                    @Html.TextBoxFor(model => model.movies_produced, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.movies_produced, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-6">
                    <span>Founded Date</span>
                    @Html.TextBoxFor(model => model.founded_date, new { type = "date", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.founded_date, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Headquarter</span>
                    @Html.TextBoxFor(model => model.headquarter, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.headquarter, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <span>Website Domain</span>
                    @Html.TextBoxFor(model => model.website, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.website, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <span>Choose Banner or Logo</span>
                    @Html.TextBoxFor(model => model.logo, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-10">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>